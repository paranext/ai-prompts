{
  "permissions": {
    "allow": ["Bash", "Read", "Write", "Edit", "Glob", "Grep", "Task", "TodoWrite", "WebFetch", "WebSearch", "NotebookEdit"],
    "deny": ["Bash(rm -rf /)", "Bash(rm -rf /*)", "Bash(mkfs:*)", "Bash(chmod -R 777 /)"],
    "ask": [
      "Bash(rm -rf:*)",
      "Bash(rm -r:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -f:*)",
      "Bash(chmod -R:*)",
      "Bash(chown -R:*)",
      "Bash(sudo:*)",
      "Bash(eval:*)",
      "Bash(npm publish:*)",
      "Bash(git push origin main:*)",
      "Bash(git push origin master:*)"
    ]
  },
  "hooks": {
    "SessionStart": [{
      "hooks": [{
        "type": "command",
        "command": ".claude/scripts/audit-session-start.sh",
        "timeout": 5
      }]
    }],
    "PreToolUse": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": ".claude/scripts/audit-tool.sh",
        "timeout": 5
      }]
    }],
    "SubagentStop": [{
      "hooks": [{
        "type": "command",
        "command": ".claude/scripts/audit-subagent-stop.sh",
        "timeout": 5
      }]
    }],
    "SessionEnd": [{
      "hooks": [{
        "type": "command",
        "command": ".claude/scripts/audit-session-end.sh",
        "timeout": 5
      }]
    }]
  }
}
